{
  "extends": "@istanbuljs/nyc-config-typescript",
  "include": [
    "src/**/*.{ts,js,vue}"
  ],
  "exclude": [
    "**/*.d.ts",
    "coverage/**",
    "packages/*/test/**",
    "test/**",
    "test{,-*}.ts",
    "**/*{.,-}{test,spec}.ts",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/*.{spec,test}.{js,ts}",
    "*/types/**/*.ts",
    "**/icomoon/**",
    "src/main.ts",
    "src/registerServiceWorker.ts"
  ],
  "extension": [
    ".ts",
    ".js",
    ".vue"
  ],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "all": true,
  "check-coverage": true,
  "reporter": [
    "lcov",
    "text-summary"
  ]
}
